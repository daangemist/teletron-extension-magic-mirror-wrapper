{
  "extends": "@tsconfig/node18-strictest",
  "compilerOptions": {
    "outDir": "./build",
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src/**/*"]
}
